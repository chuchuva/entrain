<h1>Listing coupons</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.code %></td>
        <td><%= coupon.price %></td>
        <td><%= link_to 'Show', [:admin, coupon] %></td>
        <td><%= link_to 'Edit', edit_admin_coupon_path(coupon) %></td>
        <td>
          <%= link_to 'Delete', [:admin, coupon], method: :delete,
                      data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coupon', new_admin_program_coupon_path %>
