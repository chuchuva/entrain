<h1>Settings</h1>

<table>
  <thead>
    <tr>
      <th>Setting</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.name %></td>
        <td><%= setting.value %></td>
        <td><%= link_to 'Show', admin_setting_path(setting) %></td>
        <td><%= link_to 'Edit', edit_admin_setting_path(setting) %></td>
        <td><%= link_to 'Destroy', admin_setting_path(setting), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New setting', new_admin_setting_path %>
