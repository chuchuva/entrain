<h1>Listing programs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.name %></td>
        <td><%= program.slug %></td>
        <td><%= link_to 'Show', [:admin, program] %></td>
        <td><%= link_to 'Edit', edit_admin_program_path(program) %></td>
        <td><%= link_to 'Destroy', [:admin, program], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Program', new_admin_program_path %>
